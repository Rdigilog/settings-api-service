# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Remote)
# Replace with your actual remote database URLs
DATABASE_URL=postgresql://username:password@your-db-host:5432/your-database?schema=public
DATABASE_URL_REPLICA=postgresql://username:password@your-replica-host:5432/your-database?schema=public
AUTO_MIGRATE=true

# Redis Configuration (Remote)
# Replace with your actual remote Redis URL
REDIS_URL=redis://your-redis-host:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION_TIME=1d

# Mail Configuration
MAIL_HOST=your-smtp-host.com
MAIL_PORT=465
MAIL_USER=your-email@domain.com
MAIL_PASS=your-email-password

# File Upload Configuration
FILE_UPLOAD_PROVIDER=local

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_UPLOAD_FOLDER=uploads

# Cloudinary Configuration (if using Cloudinary)
CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_BASEURL=https://res.cloudinary.com/your-cloud-name
CLOUD_UPLOAD_PRESET=your-upload-preset

# ===========================================
# LOCAL DEVELOPMENT OVERRIDE (for testing)
# ===========================================
